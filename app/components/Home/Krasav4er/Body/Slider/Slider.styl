.window{
    width: 600px;
    height: 300px;
    border: 1px solid black;
    overflow: hidden;
    position: relative;
    margin: 10px auto;
}
.window .train{
    width: 3000px;
    height: 300px;
    display: flex;
    position: absolute;
    left: 0;
    top: 0;
    transition: all 2s;
}
.window .train .block{
    width: 600px;
    height: 300px;
    text-align: center;
    font-size: 24px;
}

.slider{
    position: relative;
    margin: 0 auto;
    width: 600px;
}

.slider button{
    position: absolute;
    top: 140px;
}

#left{
    left: -50px;
}

#right{
    right: -60px;
}

.window .train .y{
   background: yellow;
}

.window .train .g{
   background: green;
}

.window .train .r{
    background: red;
}

.window .train .b{
   background: blue;
}

.window .train .o{
   background: orange;
}

.textmain {
    text-align: center;
    color: #4F4F4F;
    margin: 30px 0;
}
